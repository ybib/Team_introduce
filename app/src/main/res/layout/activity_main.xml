<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearlayout_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_han"
            android:layout_width="400px"
            android:layout_height="600px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop" />
        -

        <ImageView
            android:id="@+id/imageView_ro"
            android:layout_width="400px"
            android:layout_height="600px"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imageView_jang"
            android:layout_width="400px"
            android:layout_height="600px"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linearlayout_image"
        android:id="@+id/linearlayout_name"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한창영"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노영빈"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginRight="65dp"
            android:layout_marginLeft="65dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="정재덕"
            android:textStyle="bold"/>

    </LinearLayout>



    <RelativeLayout
        android:background="@drawable/strongfriend"
        android:layout_below="@+id/linearlayout_name"
        android:gravity="center_horizontal"
        android:id="@+id/linearlayout_text"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"

        >

        <TextView
            android:id="@+id/text"
            android:layout_margin="15dp"
            android:textSize="20dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold"
            android:gravity="center"
            android:text=" 창단일: 2019/ 08/ 05 \n 계약기간: 1일\n 초기자금: 3000원\n 조훈: 완되면 되게하라!"

            android:layout_width="match_parent"
            android:layout_above="@+id/btn_git"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_git"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="github"
            android:layout_alignLeft="@+id/text"
            android:layout_marginLeft="15dp"
            />
        <Button
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/btn_git"
            android:layout_alignRight="@+id/text"
            android:id="@+id/btn_quit"
            android:layout_below="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종료하기"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>




</RelativeLayout>